<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:id="@+id/doc_mark_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textSize="11sp"
        android:text="我的评论"
        android:drawableLeft="@mipmap/ic_document"
        android:drawableStart="@mipmap/ic_document" />

    <TextView
        android:id="@+id/tv_my_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textSize="11sp"
        android:drawableLeft="@mipmap/ic_document"
        android:drawableStart="@mipmap/ic_document"
        android:text="我的文档"/>
    <TextView
        android:id="@+id/doc_comment_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textSize="11sp"
        android:drawableStart="@mipmap/ic_document"
        android:text="我的评论"/>

    <TextView
        android:id="@+id/tv_my_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textSize="11sp"
        android:drawableStart="@mipmap/ic_document"
        android:text="我的分享"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:gravity="bottom"
        app:srcCompat="@drawable/checked_bg" />

</LinearLayout>